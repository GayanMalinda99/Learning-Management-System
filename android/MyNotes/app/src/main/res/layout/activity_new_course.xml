<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".lecturer.NewCourseActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/new_course_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:title="Add New Course" />

    <TextView
        android:id="@+id/textView_enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/new_course_toolbar"
        android:layout_marginTop="15dp"
        android:text="Enter Course information" />

    <TextView
        android:id="@+id/textView_code"
        android:layout_width="130dp"
        android:layout_height="31dp"
        android:layout_below="@id/textView_enter"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="53dp"
        android:text="Course Code" />

    <TextView
        android:id="@+id/textView_title"
        android:layout_width="132dp"
        android:layout_height="29dp"
        android:layout_below="@id/textView_code"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="35dp"
        android:text="Course Title" />

    <TextView
        android:id="@+id/textView_description"
        android:layout_width="132dp"
        android:layout_height="32dp"
        android:layout_below="@id/textView_title"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="37dp"
        android:text="Course Description" />

    <EditText
        android:id="@+id/input_code"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/new_course_toolbar"
        android:layout_marginStart="185dp"
        android:layout_marginLeft="185dp"
        android:layout_marginTop="72dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />

    <EditText
        android:id="@+id/input_title"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/input_code"
        android:layout_marginStart="185dp"
        android:layout_marginLeft="185dp"
        android:layout_marginTop="19dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />

    <EditText
        android:id="@+id/input_description"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_title"
        android:layout_marginStart="185dp"
        android:layout_marginLeft="185dp"
        android:layout_marginTop="21dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />

    <Button
        android:id="@+id/submit_course_button"
        android:layout_width="173dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/input_description"
        android:layout_marginStart="100dp"
        android:layout_marginTop="29dp"
        android:text="Submit"
        android:layout_marginLeft="100dp" />


</RelativeLayout>